generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String
  name        String
  role        Role
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  programs    Program[]
  payments    Payment[]
}

model Program {
  id         String      @id @default(uuid())
  type       ProgramType
  title      String
  description String?
  contentUrl String      // Firebase media link
  user       User        @relation(fields: [userId], references: [id])
  userId     String
  createdAt  DateTime    @default(now())
}

model Payment {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  tier       PlanTier
  createdAt  DateTime @default(now())
}

enum Role {
  TRAINER
  MEMBER
}

enum ProgramType {
  MEAL
  TRAINING
}

enum PlanTier {
  BASIC
  SILVER
  GOLD
}
